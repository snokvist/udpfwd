{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/udpfwd",
            "args": [
                "--master",
                "/dev/ttyUSB0",
                "--baudrate",
                "115200",
                "--out",
                "127.0.0.1:5600",
                "--out2",
                "127.0.0.1:5601",                
                "--in",
                "192.168.1.8:5666"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "UDP FWD gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "gcc build",
            "linux": {
                "preLaunchTask": "gcc build"
            }
        }
    ]
}
